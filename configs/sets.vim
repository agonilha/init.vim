syntax on
filetype plugin on

set tabstop=4 softtabstop=4
set shiftwidth=4
set number relativenumber
set noerrorbells
set guicursor=
set hidden
set smartindent
set incsearch
set ignorecase
set smartcase
set termguicolors
set scrolloff=8
set completeopt=menuone,noselect
set signcolumn=yes
set colorcolumn=120
set undodir=~/.config/nvim/undodir
set undofile
set noswapfile
set nobackup
set noshowmode
set nowrap
set shortmess+=c

" Lightline - Always show tabline
set showtabline=2